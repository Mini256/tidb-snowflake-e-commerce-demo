<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pingcap.shop.dao.tidb.OrderSeriesMapper">
  <resultMap id="OrderSeries" type="com.pingcap.shop.model.OrderSeries">
    <constructor>
      <idArg column="ts" javaType="java.util.Date" jdbcType="VARCHAR" />
      <arg column="type" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="amount" javaType="java.math.BigDecimal" jdbcType="DECIMAL" />
      <arg column="total" javaType="java.lang.Long" jdbcType="BIGINT" />
    </constructor>
  </resultMap>
  <insert id="insertOrderSeries" parameterType="com.pingcap.shop.model.OrderSeries">
    INSERT INTO s_orders(ts, type, amount, total) VALUES (#{ts}, #{type}, #{amount}, #{total});
  </insert>
  <insert id="insertOrderSeriesList">
    INSERT INTO s_orders(ts, type, amount, total) VALUES
    <foreach item="item" index="index" collection="orderSeriesList" separator="," nullable="true">
      (#{item.ts}, #{item.type}, #{item.amount}, #{item.total})
    </foreach>
  </insert>
  <select id="selectLatestAllTypeAmountAndTotal" resultMap="OrderSeries">
    SELECT ts, type, amount, total
    FROM s_orders
    WHERE type = 'ALL'
    ORDER BY ts DESC
    LIMIT 1;
  </select>
  <select id="selectLatestGroupTypeAmountAndTotal" resultMap="OrderSeries">
    SELECT ts, type, amount, total
    FROM s_orders
    WHERE type != 'ALL' AND ts = (SELECT MAX(ts) FROM s_orders WHERE type != 'ALL')
    ORDER BY amount DESC;
  </select>
</mapper>